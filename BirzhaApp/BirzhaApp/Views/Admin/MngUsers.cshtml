@model IEnumerable<User>
<div class="bg-primary m-1 p-1 text-white"><h4>User Accounts</h4></div>
<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
    </tr> 
    @if (Model.Count() == 0) {
        <tr>
            <td colspan="3" class="text-center">No User Accounts</td>
        </tr>
    } else {
        foreach(User user in Model) { 
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    @Html.ActionLink("Edit","Edit", new { @id =@user.Id  }, new { @class ="btn btn-sm btn-primary" })
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-primary" asp-action="Create">Create</a>