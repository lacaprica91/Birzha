@model LoginModel

<form asp-action="Login" asp-controller="Account" method="post" class="form-inline">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group pr-3">
        <label class="pr-3" asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <div><span asp-validation-for="Email" class="text-danger"></span></div>
    </div>
    <div class="form-group pr-3">
        <label class="pr-3" asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <div><span asp-validation-for="Password" class="text-danger"></span></div>
    </div>
    <button class="btn btn-outline-info" type="submit">Log In</button>
    <a asp-controller="Account" asp-action="ForgetPass" class="btn btn-link">Forgot Password?</a>
</form>