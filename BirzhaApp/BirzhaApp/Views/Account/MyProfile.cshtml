@model ProfileViewModel
@{
    ViewData["Title"] = "MyProfile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="container border my-3 bg-light">
                @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { @class = "my-3" }))
                {
                        <input asp-for="@Model.userDetails.Id" type="hidden" />
                        <div class="form-group row">
                            <div class="col-6">
                                <label asp-for="@Model.userDetails.FirstName"></label>
                                <input asp-for="@Model.userDetails.FirstName" class="form-control custom-control-inline" />
                            </div>
                            <div class="col-6">
                                <label asp-for="@Model.userDetails.LastName"></label>
                                <input asp-for="@Model.userDetails.LastName" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-6">
                                <label asp-for="@Model.userDetails.PhoneNumber"></label>
                                <input asp-for="@Model.userDetails.PhoneNumber" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-6">
                                <label asp-for="@Model.userDetails.City"></label>
                                <input asp-for="@Model.userDetails.City" class="form-control" />
                            </div>
                            <div class="col-6">
                                <label asp-for="@Model.userDetails.PostCode"></label>
                                <input asp-for="@Model.userDetails.PostCode" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.userDetails.Address1"></label>
                            <input asp-for="@Model.userDetails.Address1" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.userDetails.Address2"></label>
                            <input asp-for="@Model.userDetails.Address2" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-primary">Save details</button>
                }
            </div>
            <div class="container border my-3 bg-light">
                @using (Html.BeginForm("EditExperience", "Account", FormMethod.Post, new { @class = "my-3" }))
                {
                        <input asp-for="@Model.experience.ExpId" type="hidden" />
                        <div class="form-group row">
                            <div class="col-6">
                                <label asp-for="@Model.experience.Title"></label>
                                <input asp-for="@Model.experience.Title" class="form-control custom-control-inline" />
                            </div>
                            <div class="col-6">
                                <label asp-for="@Model.experience.CompanyName"></label>
                                <input asp-for="@Model.experience.CompanyName" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-6">
                                <label asp-for="@Model.experience.EndDate"></label>
                                <input asp-for="@Model.experience.EndDate" class="form-control" />
                            </div>
                            <div class="col-6">
                                <label asp-for="@Model.experience.StartDate"></label>
                                <input asp-for="@Model.experience.StartDate" class="form-control" />
                            </div>
                        </div>
                         <div class="form-group row">
                             <div class="col-6">
                                 <label asp-for="@Model.experience.MediaPhotos" ></label>
                                 <div class="custom-file">
                                     <label class="custom-file-label" >Choose file</label>
                                     <input asp-for="@Model.experience.MediaPhotos" type="file" class="custom-file-input">
                                 </div>
                             </div>
                        </div>
                        <div class="form-group row">
                             <div class="col-6">
                                 <label asp-for="@Model.experience.MediaVideos" ></label>
                                 <div class="custom-file">
                                     <label class="custom-file-label">Choose file</label>
                                     <input asp-for="@Model.experience.MediaVideos" type="file" class="custom-file-input" />
                                 </div>
                             </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.experience.Description"></label>
                            <textarea asp-for="@Model.experience.Description" class="form-control"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Save details</button>
                }
            </div>
            <div class="container border my-3 bg-light">
                @using (Html.BeginForm("EditEducation", "Account", FormMethod.Post, new { @class = "my-3" }))
                {
                        <input asp-for="@Model.education.EduId" type="hidden" />
                        <div class="form-group row">
                            <div class="col-6">
                                <label asp-for="@Model.education.DegreeType"></label>
                                <select class="form-control" asp-for="@Model.education.DegreeType">
                                    <option>Bachelor</option>
                                    <option>Master</option>
                                    <option>Doctorate</option>
                                    <option>Certificate</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <label asp-for="@Model.education.SchoolName"></label>
                                <input asp-for="@Model.education.SchoolName" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.education.StudyField"></label>
                            <input asp-for="@Model.education.StudyField" class="form-control" />
                        </div>
                        <div class="form-group row">
                            <div class="col-6">
                                <label asp-for="@Model.education.StartDate"></label>
                                <input asp-for="@Model.education.StartDate" class="form-control" />
                            </div>
                            <div class="col-6">
                                <label asp-for="@Model.education.EndDate"></label>
                                <input asp-for="@Model.education.EndDate" class="form-control" />
                            </div>
                        </div>
                         <div class="form-group row">
                             <div class="col-6">
                                 <label asp-for="@Model.education.MediaDoc" ></label>
                                 <div class="custom-file">
                                     <label class="custom-file-label" >Choose file</label>
                                     <input asp-for="@Model.education.MediaDoc" type="file" class="custom-file-input">
                                 </div>
                             </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.education.Description"></label>
                            <textarea asp-for="@Model.education.Description" class="form-control"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Save details</button>
                }
            </div>
        </div>
    </div>
</div>
<script>
    $('.more-info').click(function () {
        $(".card").toggleClass('flip');
    });
</script>
